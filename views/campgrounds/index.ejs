<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add New Campground</a>
    </div>
    <ul>
        <% for(let itr of camp) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=itr.image%>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= itr.title %>
                            </h5>
                            <p class="card-text">
                                <%= itr.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= itr.location %>
                                </small>
                            </p>
                            <a href="/campgrounds/<%= itr._id %>" class="btn btn-primary">View <%=itr.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>